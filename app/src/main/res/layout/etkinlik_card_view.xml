<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/etkinliklayout"
    android:background="@color/colorPrimary"

    >

    <ImageView
        android:id="@+id/IMGkuluplogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Etkinlik Başlığı"
            android:id="@+id/detayetkinlikbasligi"
            android:textColor="@color/cardview_light_background"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kulüp Adı"
            android:id="@+id/detayetkinliktarihiyeri"
            android:textColor="@color/cardview_light_background"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kulüp Adı"
        android:id="@+id/detaykulupadi"
        android:textColor="@color/cardview_light_background"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"/>

    </LinearLayout>
</android.support.v7.widget.CardView>